<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="memo"
      type="com.hucet.tyler.memo.db.model.Memo" />
  </data>

  <android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@{memo.text}"
        tools:text="text" />

      <com.hucet.tyler.memo.ui.view.SummaryLabelsView
        android:id="@+id/summaryLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout_height="100dp"
        tools:layout_width="100dp"></com.hucet.tyler.memo.ui.view.SummaryLabelsView>
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</layout>